<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_estaciones"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_estaciones_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DescubreLasEstaciones"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".niveles.ColoresEstaciones"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".niveles.SimbolosEstaciones"
            android:screenOrientation="landscape"/>

        <activity
            android:name=".niveles.RopasEstaciones"
            android:screenOrientation="landscape"/>

        <activity android:name=".niveles.PantallaFinal"
            android:screenOrientation="landscape"/>

        <activity android:name=".niveles.Tutorial"
            android:screenOrientation="landscape"/>

        <service android:name=".misc.BackgroundSound"/>
    </application>

</manifest>