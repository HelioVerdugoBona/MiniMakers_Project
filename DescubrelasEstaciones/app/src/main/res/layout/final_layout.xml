<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fondofinal"
        android:alpha="0.65"/>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_marginTop="100dp"
            android:layout_gravity="end|top"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/animacionconfetti"
            app:lottie_loop="true"/>
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:layout_gravity="start"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/animacionconfetti"
            app:lottie_loop="true"/>
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="800dp"
        android:layout_height="800dp"
        android:layout_gravity="center"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/animacionconfetti2"
        app:lottie_loop="true"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="¡¡Felicitats!!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="180sp"
        android:fontFamily="@font/cherry_bomb_one_regular"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>
   <Button
       android:id="@+id/buttonTerminar"
       android:layout_width="180dp"
       android:layout_height="70dp"
       android:text="Tornar"
       android:textSize="20sp"
       android:backgroundTint="@color/black"
       android:layout_gravity="center |bottom"
       android:layout_margin="20dp"
       android:fontFamily="@font/cherry_bomb_one_regular"
       />

</FrameLayout>